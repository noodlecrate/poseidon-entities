{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../build"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "builders/_namespace.ts",
        "builders/models/_namespace.ts",
        "builders/models/brand-model.builder.ts",
        "builders/models/noodle-model.builder.ts",
        "builders/models/review-model.builder.ts",
        "builders/models/user-model.builder.ts",
        "dtos/_namespace.ts",
        "dtos/brand-dto.ts",
        "dtos/noodle-dto.ts",
        "dtos/review-create-dto.ts",
        "dtos/review-dto.ts",
        "dtos/user-dto.ts",
        "index.ts",
        "models/_interfaces/model.i.ts",
        "models/_namespace.ts",
        "models/brand-model.ts",
        "models/noodle-model.ts",
        "models/review-model.ts",
        "models/user-model.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
